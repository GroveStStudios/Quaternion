CC = g++
CPPFLAGS = -lGL -lSDL2 -I/usr/include/SDL2 -L/usr/local -std=c++11

all: quaternion

build/%.o: src/%.cpp
	$(CC) -c $(CPPFLAGS) $< -o $@ $(CPPFLAGS)

quaternion: build/shield.o build/badguy.o build/goodguy.o build/bullet.o build/leveldesigner.o build/quaternion.o build/quaternionlib.o
	$(CC) $^ -o $@ $(CPPFLAGS)

clean:
	$(RM) *.o build/*.o quaternion
